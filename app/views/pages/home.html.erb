<h2>Sign Up:</h2>

<%= form_with do |f| %>
  <%= f.email_field :email, placeholder: 'Your email' %>
  <%= f.text_field :name, placeholder: 'Name' %>
  <%= f.password_field :password, placeholder: 'Password' %>

  <%= f.submit 'Create Account' %>
<% end %>

<div class="links">
  <div>--</div>
  <%= link_to 'Sign In' %>
  <%= link_to 'I forgot password' %>
</div>
