<h1>Pings history:
  <sup class="italic"><%= link_to @target.url, @target.url %></sup>
</h1>

<% if @pings.any? %>
  <div class="bold">Date / Duration / Response code:</div><br/>
  <% @pings.each do |ping| %>
    <%= render ping %>
  <% end %>
  <br/>
  <%= paginate @pings %>
<% else %>
  <p class="red italic">No pings (:</p>
<% end %>
