<%= form_with model: @account, local: true do |f| %>
  <%= render 'layouts/errors' %>

  <%= f.email_field :email, placeholder: 'Your email', title: 'Email', autofocus: true %><br/>
  <% unless signed_in? %>
    <%= f.text_field :name, placeholder: 'Name', title: 'Name' %><br/>
  <% end  %>
  <%= f.password_field :password, placeholder: 'Password', title: 'Password' %><br/><br/>

  <%= f.submit(current_page?(root_path) ? 'Create Account' : 'OK') %>
<% end %>

<br/><br/>

<div>
  --<br/>
  <%= link_to 'Sign In', new_session_path %><br/>
  <%= link_to 'I forgot password', reset_password_path %>
</div>
