<%= form_with model: @user, local: true do |f| %>
  <%= render 'layouts/errors' %>

  <%= f.text_field :name, autofocus: true, title: 'Name' %><br/>
  <%= f.select :country, Country::COUNTRIES_HASH.invert, include_blank: '- Your country -' %><br/>
  <%= f.select :timezone, Timezone::SUPPORTED_TZ_NAMES.sort, include_blank: '- Your timezone -' %><br/>

  <br/>

  <%= f.submit 'OK' %>
<% end %>
