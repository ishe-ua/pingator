<%= form_with model: @user, local: true do |f| %>
  <%= render 'layouts/errors' %>

  <%= f.text_field :name, placeholder: 'Name', title: 'Name', autofocus: true %><br/>
  <%= f.select :country, Country::COUNTRIES_HASH.invert, include_blank: '- Your country -' %><br/>

  <br/>

  <%= f.submit 'OK' %>
<% end %>
