<%= form_with model: @user do |f| %>
  <%= render 'layouts/errors' %>

  <%= f.text_field :name, autofocus: true, title: 'Name' %><br/>
  <%= f.select :country, Country::COUNTRIES_HASH.invert, { prompt: '- Your country -' }, { title: 'Country' } %><br/>
  <%= f.select :timezone, Timezone::SUPPORTED_TZ_NAMES.sort, { prompt: '- Your timezone -'}, { title: 'Timezone' } %><br/>

  <br/>

  <%= f.submit 'OK' %>
<% end %>
