<%= render 'layouts/app/title', text: 'My Urls' %>

<%= link_to 'Add new', new_target_path, class: "add" %>

<% if current_user.targets.any? %>

  <ol>
    <% current_user.targets.each do |target| %>
      <li><%= render target %></li>
    <% end %>
  </ol>

<% else %>
  <%= render 'shared/any', text: 'Add first and start monitoring' %>
<% end %>
